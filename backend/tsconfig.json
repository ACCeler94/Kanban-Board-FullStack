{
  "compilerOptions": {
    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true                ,                 /* Skip type checking all .d.ts files. */
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules"]
}
